<!--packageA/pages/index/index.wxml-->
<scroll-view scroll-y class="scrollPage">
  <view class="cu-list menu sm-border margin-top card-menu">
    
    <view class="cu-item">
      <view class="content">
        <text class="cuIcon-peoplefill text-green"></text>
        <text class="text-grey">用户名</text>
      </view>
      <view class="action">
        <text class="text-grey text-sm">{{username}}</text>
      </view>
    </view>

    <view class="cu-item">
      <view class="content">
        <text class="cuIcon-phone text-olive"></text>
        <text class="text-grey">手机号</text>
      </view>
      <view class="action">
        <text class="text-grey text-sm">{{phone}}</text>
      </view>
    </view>

    <view class="cu-item">
      <view class="content">
        <text class="cuIcon-commentfill text-orange"></text>
        <text class="text-grey">用户类型</text>
      </view>
      <view class="action">
        <text class="text-grey text-sm">{{aroundType}}</text>
      </view>
    </view>
    
    <!-- <view class="cu-item arrow" bindtap="changePwd">
      <view class="content">
        <text class="cuIcon-settings text-red"></text>
        <text class="text-settings">修改密码</text>
      </view>
    </view> -->

    <view class="padding flex flex-direction" bindtap="loginOut">
      <button class="cu-btn bg-red margin-tb-sm lg">退出登录</button>
    </view>
  </view>

  

  <view class="cu-tabbar-height"></view>
</scroll-view>
